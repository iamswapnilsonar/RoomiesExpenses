<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="@dimen/height_xlarge"
        android:layout_height="@dimen/height_xlarge"
        android:src="@mipmap/ic_add_member"
        android:layout_margin="@dimen/margin_small"
        android:layout_alignParentLeft="true"
        android:id="@+id/imgPicture" />

    <np.TextView
        style="@style/AppTheme.TextGearedSlab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="@dimen/text_medium"
        android:layout_toRightOf="@+id/imgPicture"
        android:text="Medium Text"
        android:layout_margin="@dimen/margin_small"
        android:id="@+id/txtName" />

    <np.TextView
        style="@style/AppTheme.TextGearedSlab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="@dimen/text_small"
        android:text="Small Text"
        android:layout_below="@+id/txtName"
        android:layout_toRightOf="@+id/imgPicture"
        android:layout_marginLeft="@dimen/margin_small"
        android:id="@+id/txtEmailIdPhoneNo" />
    <np.TextView
        style="@style/AppTheme.TextGearedSlab"
        android:id="@+id/txtIsActive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/green"
        android:textSize="@dimen/text_small"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:textStyle="bold"
        android:text="Active"
        android:layout_marginRight="@dimen/margin_small"
        android:layout_marginTop="@dimen/margin_small" />
</RelativeLayout>