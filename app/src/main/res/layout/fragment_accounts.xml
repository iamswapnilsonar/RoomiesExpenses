<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.harshal.roomiesexpenses.fragments.AccountsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/default_screen_bg"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linLayAddAccount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:visibility="gone">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <np.EditText
                    style="@style/AppTheme.OswaldRegular"
                    android:id="@+id/editTextAcHoldersName"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_small"
                    android:layout_marginLeft="@dimen/margin_medium"
                    android:layout_marginRight="@dimen/margin_medium"
                    android:layout_marginTop="@dimen/margin_medium"
                    android:ems="10"
                    android:gravity="center_vertical"
                    android:hint="*Ac Holders Name"
                    android:inputType="textCapWords" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <np.EditText
                    style="@style/AppTheme.OswaldRegular"
                    android:id="@+id/editTextAcBankName"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_small"
                    android:layout_marginLeft="@dimen/margin_medium"
                    android:layout_marginRight="@dimen/margin_medium"
                    android:layout_marginTop="@dimen/margin_medium"
                    android:ems="10"
                    android:gravity="center_vertical"
                    android:hint="*Bank Name"
                    android:inputType="textCapWords" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <np.EditText
                    style="@style/AppTheme.OswaldRegular"
                    android:id="@+id/editTextAcBranch"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_small"
                    android:layout_marginLeft="@dimen/margin_medium"
                    android:layout_marginRight="@dimen/margin_medium"
                    android:layout_marginTop="@dimen/margin_medium"
                    android:ems="10"
                    android:gravity="center_vertical"
                    android:hint="*Branch Name"
                    android:inputType="textCapWords" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <np.EditText
                    style="@style/AppTheme.OswaldRegular"
                    android:id="@+id/editTextAcNumber"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_small"
                    android:layout_marginLeft="@dimen/margin_medium"
                    android:layout_marginRight="@dimen/margin_medium"
                    android:layout_marginTop="@dimen/margin_medium"
                    android:ems="10"
                    android:gravity="center_vertical"
                    android:hint="*Ac Number"
                    android:inputType="textCapCharacters" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <np.EditText
                    style="@style/AppTheme.OswaldRegular"
                    android:id="@+id/editTextAcIfscCode"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_small"
                    android:layout_marginLeft="@dimen/margin_medium"
                    android:layout_marginRight="@dimen/margin_medium"
                    android:layout_marginTop="@dimen/margin_medium"
                    android:ems="10"
                    android:gravity="center_vertical"
                    android:hint="*IFSC Code"
                    android:inputType="textCapCharacters" />
            </android.support.design.widget.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/margin_medium"
                android:orientation="horizontal">

                <np.Button
                    style="@style/AppTheme.TextGearedSlab"
                    android:id="@+id/btnAddAccount"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_small"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="@dimen/margin_medium"
                    android:layout_weight="1"
                    android:background="@drawable/button_selector"
                    android:textSize="@dimen/text_small"
                    android:textColor="@color/white"
                    android:text="Add Account" />

                <np.Button
                    style="@style/AppTheme.TextGearedSlab"
                    android:id="@+id/btnCancel"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_small"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="@dimen/margin_medium"
                    android:layout_weight="1"
                    android:background="@drawable/button_selector"
                    android:textSize="@dimen/text_small"
                    android:textColor="@color/white"
                    android:text="Cancel" />
            </LinearLayout>
        </LinearLayout>

        <ListView
            android:id="@+id/listViewAccounts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>

    <com.melnykov.fab.FloatingActionButton
        android:id="@+id/fabAddAccounts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:src="@drawable/ic_fab_action_add"
        fab:fab_colorNormal="@color/accent"
        fab:fab_colorPressed="@color/accent_pressed"
        fab:fab_colorRipple="@color/ripple" />
</FrameLayout>
